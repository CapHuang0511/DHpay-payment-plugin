<config>
    <modules>
        <Magento91_Dhpay>
            <version>0.9.0</version>
        </Magento91_Dhpay>
    </modules>
    <global>
		
		  <helpers>
		  	   <dhpay>
		  	   	   <class>Magento91_Dhpay_Helper</class>
		  	   </dhpay>
		  </helpers>		
        <models>
            <dhpay>
                <class>Magento91_Dhpay_Model</class>
                <resourceModel>dhpay_mysql4</resourceModel>
            </dhpay>
            <dhpay_mysql4>
                <class>Magento91_Dhpay_Model_Mysql4</class>
                <entities>
                    <api_debug><table>dhpay_api_debug</table></api_debug>
                </entities>
            </dhpay_mysql4>
        </models>
        <resources>
            <dhpay_setup>
                <setup>
                    <module>Magento91_Dhpay</module>
                    <class>Magento91_Dhpay_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </dhpay_setup>
            <dhpay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </dhpay_write>
            <dhpay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </dhpay_read>
        </resources>
        <blocks>
            <dhpay><class>Magento91_Dhpay_Block</class></dhpay>
    	</blocks>
    </global>
    <frontend>
        <secure_url>
            <dhpay_payment>/dhpay/payment</dhpay_payment>
        </secure_url>
        <routers>
            <dhpay>
                <use>standard</use>
                <args>
                    <module>Magento91_Dhpay</module>
                    <frontName>dhpay</frontName>
                </args>
            </dhpay>
        </routers>
        <translate>
            <modules>
                <Magento91_Dhpay>
                    <files>
                        <default>Magento91_Dhpay.csv</default>
                    </files>
                </Magento91_Dhpay>
            </modules>
        </translate>
        <layout>
            <updates>
                <dhpay>
                    <file>dhpay.xml</file>
                </dhpay>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Magento91_Dhpay>
                    <files>
                        <default>Magento91_Dhpay.csv</default>
                    </files>
                </Magento91_Dhpay>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <dhpay_payment>
                  <model>dhpay/payment</model>
                  <title>Dhpay Payment Gateway</title>
                  <allowspecific>0</allowspecific>
                  <transaction_type>O</transaction_type>
            </dhpay_payment>
        </payment>
    </default>
</config>
